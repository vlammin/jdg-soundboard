<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleTextColor">@color/yellow</item>
        <item name="subtitleTextColor">@color/yellow</item>
    </style>

    <style name="AlertDialogTheme" parent="@android:style/Theme.DeviceDefault.Dialog"/>

    <style name="ActionBarCompat" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey_primary</item>
        <item name="android:textColor">@color/white_overlay</item>
        <item name="android:textColorPrimary">@color/white_overlay</item>
    </style>

    <!-- Dashboard -->
    <style name="DashboardRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@color/grey_primary_dark</item>
    </style>

    <style name="DashboardItemWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/layout_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DashboardItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:clickable">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DashboardItemContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_alignParentBottom">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Footer Bar -->
    <style name="FooterBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/grey_primary</item>
    </style>

    <!-- Sound details -->
    <style name="DetailButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_default</item>
        <item name="android:ellipsize">start</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailButton.SeeEpisode">
        <item name="android:layout_weight">2</item>
    </style>

    <!-- Player controller -->
    <style name="PlayerButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">71dip</item>
        <item name="android:layout_height">52dip</item>
    </style>

    <style name="PlayerButton.Ffw">
        <item name="android:src">@drawable/ic_player_ffw</item>
    </style>

    <style name="PlayerButton.Rew">
        <item name="android:src">@drawable/ic_player_rew</item>
    </style>

    <style name="PlayerButton.Stop">
        <item name="android:src">@drawable/ic_player_stop</item>
    </style>

    <!-- Presage Library -->
    <style name="Presage.Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>